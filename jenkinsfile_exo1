pipeline {
    agent any
    parameters {
        string(name: 'NAME', description: 'Please tell me your name ?')
        choice(name: 'BRANCH', choices: ['Master', 'Dev', 'Feature'], description: 'Choose the branch')
        booleanParam(name: 'SKIP_TEST', defaultValue: false, description: 'Want to skip running Test cases?')
    }
    stages {
        stage('Greeting') {
            steps {
                script {
                    def name = "${params.NAME}"
                    echo "Hello, $name!"
                }
            }
        }
        stage('Branch Selection') {
            steps {
                echo "Selected branch for build: ${params.BRANCH}"
            }
        }
        stage('Build') {
            steps {
                echo 'Starting development...'
            }
        }
        stage('Test') {
            when {
                expression { return !params.SKIP_TEST }
            }
            steps {
                echo 'Running tests...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to production...'
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed!'
        }
    }
}
