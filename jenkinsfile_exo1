pipeline {
    agent any
    parameters {
        string(name: 'NAME', defaultValue: 'Default Name', description: 'Please tell me your name')
        text(name: 'DESC', defaultValue: 'This is the default job description', description: 'Describe the job details')
        booleanParam(name: 'SKIP_TEST', defaultValue: false, description: 'Do you want to skip running test cases?')
        choice(name: 'BRANCH', choices: ['Master', 'Dev', 'Feature'], description: 'Choose the branch to build')
        password(name: 'SONAR_SERVER_PWD', defaultValue: 'password', description: 'Enter SONAR password')
    }
    stages {
        stage('Print Parameters') {
            steps {
                echo "Name: ${params.NAME}"
                echo "Description: ${params.DESC}"
                echo "Skip Test: ${params.SKIP_TEST}"
                echo "Branch: ${params.BRANCH}"
                echo "SONAR Password: (Hidden for security reasons)"
            }
        }
        stage('Conditional Execution') {
            when {
                expression { return !params.SKIP_TEST }
            }
            steps {
                echo 'Running tests since SKIP_TEST is false.'
                // Add test steps here
            }
        }
        stage('Build') {
            steps {
                echo "Building branch: ${params.BRANCH}"
                // Add build steps here
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed.'
        }
    }
}
